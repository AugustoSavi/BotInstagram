{
    "manifest_version": 2,
    "version": "0.0.1",
    "name": "MakeLikes",
    "description": "Make Likes on Instagram",
    "author": "Augusto Savi"
    ,
    "browser_action": {
   	 "default_title": "Ganhe Seguidores e Likes",
   	 "default_popup": "index.html",
    "default_icon": "/icons/instagram_48.png"
    },
    "background": {
        "scripts": [
            "/src/background_script.js"
        ],
        "persistent": false
      },
    "permissions":[
        "activeTab",
        "declarativeContent",
        "http://*/*",
        "https://*/*"
    ]
}